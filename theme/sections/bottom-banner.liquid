          },
          "placeholder": {
            "en": "E.g: 8px 8px 8px 8px"
          }
        }
      ]
    },
    {
      "type": "style_svg",
      "name": {
        "en": "[+] SVG Content"
      },
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Block label"
          }
        },
        {
          "type": "color",
          "id": "svg_cl",
          "label": {
            "en": "Color"
          }
        },
        {
          "type": "text",
          "id": "svg_fs",
          "label": {
            "en": "Font size"
          },
          "placeholder": {
            "en": "E.g: 20px"
          }
        },
        {
          "type": "range",
          "id": "svg_fw",
