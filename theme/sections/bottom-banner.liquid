          "label": {
            "en": "Line height"
          },
          "placeholder": {
            "en": "E.g: 21px"
          }
        }
      ]
    },
    {
      "type": "style_button",
      "name": {
        "en": "[+] Button"
      },
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Block label"
          }
        },
        {
          "type": "text",
          "id": "btn_fs",
          "label": {
            "en": "Font size"
          },
          "placeholder": {
            "en": "E.g: 24px"
          }
        },
        {
          "type": "color",
          "id": "btn_bg_cl",
          "label": {
            "en": "Background Color"
          }
        },
        {
          "type": "color",
          "id": "btn_cl",
          "label": {
            "en": "Text Color"
          }
        },
        {
          "type": "range",
          "id": "btn_fw",
          "label": {
            "en": "Font weight (0 is auto)"
          },
          "min": 0,
          "max": 900,
          "step": 100,
          "default": 0
        },
        {
          "type": "text",
