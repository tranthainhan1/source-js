{%- if section.blocks.size > 0 -%}
   {%- liquid
      assign sectionType = 'bottom-banner'
   -%}
   {%- capture content -%}{%- include 'snippet-slideshow', sectionType: sectionType, sectionName: 'home-single-banner' -%}{%- endcapture -%}

   {%- render 'compress', content: content -%}
{%- endif -%}

{% schema %}
{
  "name": {
    "en": "Bottom Banner"
  },
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "boxed_layout",
      "label": {
        "en": "Boxed layout"
      },
      "default": true
    },
    {
      "type": "text",
      "id": "slide_height",
      "label": {
        "en": "Manual height"
      },
      "placeholder": {
        "en": "E.g: 500px"
      }
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": {
        "en": "Banner"
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "en": "Banner image"
          }
        },
        {
          "type": "text",
          "id": "image_position",
          "label": {
            "en": "Image position"
          },
          "placeholder": {
            "en": "E.g: center center or left center"
          }
        },
        {
          "type": "select",
          "id": "direction_content",
          "label": {
            "en": "Content direction"
          },
          "options": [
            {
              "value": "horizontal",
              "label": {
                "en": "Horizontal"
              }
            },
            {
              "value": "vertical",
              "label": {
                "en": "Vertical"
              }
            }
          ],
          "default": "vertical"
        },
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Block label"
          }
        },
        {
          "type": "textarea",
          "id": "visible",
          "label": {
            "en": "Specific Collection/Product to apply"
          },
          "placeholder": {
            "en": "E.g: Title 1; Title 2; ..."
          },
          "info": {
            "en": "Separate by ';'"
          }
        },
        {
          "type": "paragraph",
          "content": {
            "en": "Use +Collection show only on Collection pages"
          }
        },
        {
          "type": "paragraph",
          "content": {
            "en": "Use +Product show only on Product pages"
          }
        },
        {
          "type": "header",
          "content": {
            "en": "Paragraph & Button"
          }
        },
        {
          "type": "textarea",
          "id": "text_1",
          "label": {
            "en": "Text 1"
          }
        },
        {
          "type": "textarea",
          "id": "text_2",
          "label": {
            "en": "Text 2"
          }
        },
        {
          "type": "text",
          "id": "btn_txt",
          "label": {
            "en": "Button label"
          }
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": {
            "en": "Button URL"
          }
        },
        {
          "type": "header",
          "content": {
            "en": "Custom Content"
          }
        },
        {
          "type": "text",
          "id": "svg_1",
          "label": {
            "en": "SVG 1"
          }
        },
        {
          "type": "text",
          "id": "text_svg_1",
          "label": {
            "en": "SVG Info 1"
          }
        },
        {
          "type": "text",
          "id": "svg_2",
          "label": {
            "en": "SVG 2"
          }
        },
        {
          "type": "text",
          "id": "text_svg_2",
          "label": {
            "en": "SVG Info 2"
          }
        }
      ]
    },
    {
      "type": "style_content_wrapper",
      "name": {
        "en": "[+] Content wrapper"
      },
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Block label"
          }
        },
        {
          "type": "text",
          "id": "position",
          "label": {
            "en": "Text block position"
          },
          "placeholder": {
            "en": "E.g: 50%:50%"
          },
          "info": {
            "en": "Left(%):Top(%)"
          }
        },
        {
          "type": "text",
          "id": "align",
          "label": {
            "en": "Alignment"
          },
          "placeholder": {
            "en": "E.g: left or center"
          }
        }
      ]
    },
    {
