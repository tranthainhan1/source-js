<style>
  {%- liquid
    assign color_default = 'rgba(0,0,0,0)'
  -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'style_desk' -%}
        .header-container .header-content .header-desktop{
          --bg-color                    : {{block.settings.bg_color | replace: color_default , 'currentColor' }};
          --text-color                  : {{block.settings.text_color | replace: color_default , 'currentColor'}};
          --icon-color                  : {{block.settings.icon_color | replace: color_default, 'currentColor'}};
          --cart-number-bg              : {{block.settings.bg_cart_number | replace: color_default, 'currentColor'}};
          --text-cart-number-color      : {{block.settings.text_cart_number | replace: color_default, 'currentColor'}};
        }
        .header-container .header-desktop .header-content_bottom .wrapper{
          --bg-color        : {{block.settings.bg_vertical | replace: color_default, 'currentColor'}};
          --bg-color-hover  : {{block.settings.vertical_bg_hover_color | replace: color_default, 'currentColor'}};
          --text-color      : {{block.settings.vertical_content_color | replace: color_default, 'currentColor'}};
          --text-color-hover: {{block.settings.vertical_hover_color | replace: color_default, 'currentColor'}};
        }
        .header-container .header-desktop .header-content_bottom .dropdown-menu{
          --bg-color           : {{block.settings.vertical_dd_bg_color | replace: color_default, 'currentColor'}};
          --text-color         : {{block.settings.vertical_dd_text_color | replace: color_default, 'currentColor'}};
          --text-color-hover   : {{block.settings.vertical_dd_hover_color | replace: color_default, 'currentColor'}};
          --item-bg-color-hover: {{block.settings.vertical_item_hover_color | replace: color_default, 'currentColor'}};
        }
      {% comment %} end {% endcomment %}

      {%- when 'style_mobi' -%}
        .header-container .header-content .header-mobile{
          --bg-color              : {{block.settings.bg_color | replace: color_default , 'currentColor' }};
          --text-color            : {{block.settings.text_color | replace: color_default , 'currentColor'}};
          --icon-color            : {{block.settings.icon_color | replace: color_default, 'currentColor'}};
          --cart-number-bg        : {{block.settings.bg_cart_number | replace: color_default, 'currentColor'}};
          --text-cart-number-color: {{block.settings.text_cart_number | replace: color_default, 'currentColor'}};
        }
        .header-container .header-mobile .header-content_bottom .wrapper{
          --bg-color        : {{block.settings.bg_vertical | replace: color_default, 'currentColor'}};
          --bg-color-hover  : {{block.settings.vertical_bg_hover_color | replace: color_default, 'currentColor'}};
          --text-color      : {{block.settings.vertical_content_color | replace: color_default, 'currentColor'}};
          --text-color-hover: {{block.settings.vertical_hover_color | replace: color_default, 'currentColor'}};
        }
        .header-container .header-mobile .header-content_bottom .dropdown-menu{
          --bg-color           : {{block.settings.vertical_dd_bg_color | replace: color_default, 'currentColor'}};
          --text-color         : {{block.settings.vertical_dd_text_color | replace: color_default, 'currentColor'}};
          --text-color-hover   : {{block.settings.vertical_dd_hover_color | replace: color_default, 'currentColor'}};
          --item-bg-color-hover: {{block.settings.vertical_item_hover_color | replace: color_default, 'currentColor'}};
        }
    {%- endcase -%}
  {%- endfor -%}
</style>

