{%- include 'snippet-slideshow-v2' -%}
 
{% schema %}
{
  "name": {
    "en": "Slideshow with Countdown"
  },
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": {
        "en": "Created by 'Slideshow with Countdown' section"
      }
    },
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Section Label [:id]"
      },
      "default": "Slideshow with Countdown"
    },
    {
      "type": "header",
      "content": {
        "en": "LAYOUT"
      }
    },
    {
      "type": "checkbox",
      "id": "boxed_layout",
      "label": {
        "en": "Boxed layout"
      },
      "default": true
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": {
        "en": "Background image"
      }
    },
    {
      "type": "select",
      "id": "bg_repeat",
      "label": {
        "en": "Backgound repeat"
      },
      "options": [
        {
          "value": "no-repeat",
          "label": {
            "en": "No repeat"
          }
        },
        {
          "value": "repeat",
          "label": {
            "en": "Repeat"
          }
        },
        {
          "value": "repeat-y",
          "label": {
            "en": "Repeat y"
          }
        },
        {
          "value": "repeat-x",
          "label": {
            "en": "Repeat x"
          }
        }
      ]
    },
    {
      "type": "select",
      "id": "bg_size",
      "label": {
        "en": "Background size"
      },
      "options": [
        {
          "value": "auto",
          "label": {
            "en": "Auto"
          }
        },
        {
          "value": "cover",
          "label": {
            "en": "Cover"
          }
        },
        {
          "value": "contain",
          "label": {
            "en": "Contain"
          }
        }
      ]
    },
    {
      "type": "text",
      "id": "bg_position",
      "label": {
        "en": "Background image position"
      },
      "placeholder": {
        "en": "E.g: center center or left center"
      }
    },
    {
      "type": "header",
      "content": {
        "en": "Slideshow settings"
      }
    },
    {
      "type": "text",
      "id": "slide_height",
      "label": {
        "en": "Slide height"
      },
      "placeholder": {
        "en": "E.g: 500px"
      },
      "default": "500px"
    },
    {
      "type": "checkbox",
      "id": "dots",
      "label": {
        "en": "Show dots"
      }
    },
    {
      "type": "checkbox",
      "id": "controls",
      "label": {
        "en": "Show controls"
      }
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": {
        "en": "Autoplay"
      }
    },
    {
      "type": "text",
      "id": "autoplay_timeout",
      "label": {
        "en": "Auto switch slide (in s)"
      },
      "placeholder": {
        "en": "E.g: 5"
      }
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": {
        "en": "Slide item"
      },
      "limit": 6,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Block title"
          }
        },
        {
          "type": "checkbox",
          "id": "order_reverse",
          "label": {
            "en": "Order reverse"
          }
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "en": "Image"
          }
        },
        {
          "type": "text",
          "id": "image_width",
          "label": {
            "en": "Max width"
          }
        },
        {
          "type": "header",
          "content": {
            "en": "Paragraph & Button"
          }
        },
        {
          "type": "textarea",
          "id": "text_1",
          "label": {
            "en": "Text 1"
          }
        },
        {
          "type": "textarea",
          "id": "text_2",
          "label": {
            "en": "Text 2"
          }
        },
        {
          "type": "text",
          "id": "btn_txt",
          "label": {
            "en": "Button label"
          }
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": {
            "en": "Button URL"
          }
        },
        {
          "type": "header",
          "content": {
            "en": "Countdown"
          }
        },
        {
          "type": "checkbox",
          "id": "enable_countdown",
          "label": {
            "en": "Enable countdown"
          }
        },
        {
          "type": "text",
          "id": "countdown",
          "label": {
            "en": "Date"
          },
          "info": {
            "en": "Date format: MM/DD/YYYY"
          }
        }
      ]
    },
    {
      "type": "style_paragraph",
      "name": {
        "en": "[+] Paragraph"
      },
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Block label"
          }
        },
        {
          "type": "header",
          "content": {
            "en": "Text 1 settings"
          }
        },
        {
          "type": "text",
          "id": "text_fs_1",
          "label": {
            "en": "Font size"
          },
          "placeholder": {
            "en": "E.g: 24px"
          }
        },
        {
          "type": "color",
          "id": "text_cl_1",
          "label": {
            "en": "Color"
          }
        },
        {
          "type": "range",
          "id": "text_fw_1",
          "label": {
            "en": "Font weight (0 is auto)"
          },
          "min": 0,
          "max": 900,
          "step": 100,
          "default": 0
        },
        {
          "type": "text",
          "id": "text_1_margin",
          "label": {
            "en": "Margin"
          },
          "placeholder": {
            "en": "E.g: 5px 8px 5px 8px"
          },
          "info": {
            "en": "Order: Top Right Bottom Left"
          }
        },
        {
          "type": "text",
          "id": "text_lh_1",
          "label": {
            "en": "Line height"
          },
          "placeholder": {
            "en": "E.g: 21px"
          }
        },
        {
          "type": "header",
          "content": {
            "en": "Text 2 settings"
          }
        },
        {
          "type": "text",
          "id": "text_fs_2",
          "label": {
            "en": "Font size"
          },
          "placeholder": {
            "en": "E.g: 24px"
          }
        },
        {
          "type": "color",
          "id": "text_cl_2",
          "label": {
            "en": "Color"
          }
        },
        {
          "type": "range",
          "id": "text_fw_2",
          "label": {
            "en": "Font weight (0 is auto)"
          },
          "min": 0,
          "max": 900,
          "step": 100,
          "default": 0
        },
        {
          "type": "text",
          "id": "text_2_margin",
          "label": {
            "en": "Margin"
          },
          "placeholder": {
            "en": "E.g: 5px 8px 5px 8px"
          },
          "info": {
            "en": "Order: Top Right Bottom Left"
          }
        },
        {
          "type": "text",
          "id": "text_lh_2",
          "label": {
            "en": "Line height"
          },
          "placeholder": {
            "en": "E.g: 21px"
          }
        },
        {
          "type": "header",
          "content": {
            "en": "Countdown style"
          }
        },
        {
          "type": "text",
          "id": "text_fs_3",
          "label": {
            "en": "Font size"
          },
          "placeholder": {
            "en": "E.g: 24px"
          }
        },
        {
          "type": "color",
          "id": "text_cl_3",
          "label": {
            "en": "Color"
          }
        },
        {
          "type": "range",
          "id": "text_fw_3",
          "label": {
            "en": "Font weight (0 is auto)"
          },
          "min": 0,
          "max": 900,
          "step": 100,
          "default": 0
        },
        {
          "type": "text",
          "id": "text_3_margin",
          "label": {
            "en": "Margin"
          },
          "placeholder": {
            "en": "E.g: 5px 8px 5px 8px"
          },
          "info": {
            "en": "Order: Top Right Bottom Left"
          }
        },
        {
          "type": "text",
          "id": "text_lh_3",
          "label": {
            "en": "Line height"
          },
          "placeholder": {
            "en": "E.g: 21px"
          }
        }
      ]
    },
    {
      "type": "style_button",
      "name": {
        "en": "[+] Button"
      },
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": {
            "en": "Block label"
          }
        },
        {
          "type": "text",
          "id": "btn_fs",
          "label": {
            "en": "Font size"
          },
          "placeholder": {
            "en": "E.g: 24px"
          }
        },
        {
          "type": "color",
          "id": "btn_cl",
          "label": {
            "en": "Text Color"
          }
        },
        {
          "type": "color",
          "id": "btn_bg_cl",
          "label": {
            "en": "Background Color"
          }
        },
        {
          "type": "color",
          "id": "btn_border_cl",
          "label": {
            "en": "Border Color"
          }
        },
        {
          "type": "color",
          "id": "btn_hover_cl",
          "label": {
            "en": "Hover: Text color"
          }
        },
        {
          "type": "color",
          "id": "btn_hover_bg_cl",
          "label": {
            "en": "Hover: Background color"
          }
        },
        {
          "type": "color",
          "id": "btn_hover_border_cl",
          "label": {
            "en": "Hover: Border color"
          }
        },
        {
          "type": "range",
          "id": "btn_fw",
          "label": {
            "en": "Font weight (0 is auto)"
          },
          "min": 0,
          "max": 900,
          "step": 100,
          "default": 0
        },
        {
          "type": "text",
          "id": "btn_padding",
          "label": {
            "en": "Padding"
          },
          "placeholder": {
            "en": "E.g: 5px 8px 5px 8px"
          },
          "info": {
            "en": "Order: Top Right Bottom Left"
          }
        },
        {
          "type": "text",
          "id": "btn_radius",
          "label": {
            "en": "Button rounded corners"
          },
          "placeholder": {
            "en": "E.g: 8px 8px 8px 8px"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Slideshow with Countdown"
      },
      "category": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

 
