<div class="container text-center">
  <div id="template">
    <div class="template_header">
      <h2 class="title">Activate Account</h2>
      <p class="note">Create your password to activate your account</p>
    </div>

    {% form 'activate_customer_password', class: 'form-account' %}
      {{ form.errors | default_errors }}

      <div id="password" class="form-control">
        <label class="large" for="password">Password</label>
        <input type="password" value="" name="customer[password]" id="customer_password"/>
      </div>
      <div id="password_confirm" class="form-control">
        <label class="large" for="password_confirmation">Password Confirmation</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation"/>
      </div>
      <div class="action_bottom">
        <input class="btn btn-1" type="submit" value="Activate"/>
        <span class="note">or</span>
        <input type="submit" class="btn btn-2 cancel" name="decline" id="customer_decline" value="Decline Invitation"/>
      </div>
    {% endform %}
  </div>
</div>