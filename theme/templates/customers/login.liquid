{% comment %} <div class="container text-center">
  <div id="template">
    <div id="customer">
      <div class="page-heading">
        <h2 class="title">{{- 'customer.login.title' | t -}}</h2>
      </div>

      {%- form 'customer_login', class: 'form-account' -%}
        {{ form.errors | default_errors }}

        <div id="login_email" class="form-control">
          <label for="customer_email">{{- 'customer.login.email' | t -}}</label>
          <input type="email" value="" name="customer[email]" id="customer_email" required/>
        </div>

        {%- if form.password_needed -%}

            Customer Account Login

          <div id="login_password" class="form-control">
            <label for="customer_password">{{- 'customer.login.password' | t -}}</label>
            <input type="password" value="" name="customer[password]" id="customer_password" required/>
          </div>

        {%- endif -%}

        <div class="action_bottom">
          <div class="action_line">            
            <input class="btn btn-2" type="submit" value="{{- 'customer.login.sign_in' | t -}}"/>
            <span class="note">{{ 'customer.general.or' | t }}</span>
            <a href="{{ shop.url }}" class="btn btn-1">{{- 'customer.general.return' | t -}}</a>
          </div>

          <p id="forgot_password">
            <a href="#" onclick="showRecoverPasswordForm();return false;">{{- 'customer.login.forgot_password' | t -}}</a>
          </p>
          <p><a href="{{ routes.account_register_url }}">{{- 'customer.login.register' | t -}}</a></p>
        </div>
      {%- endform -%}
    </div>

      Recover Password Form

    <div id="recover-password" style='display:none'>
      <div class="page-heading">
        <h2 class="title">{{- 'customer.recover_password.title' | t -}}</h2>
        <p class="note">{{- 'customer.recover_password.subtext' | t -}}</p>
      </div>

      {%- form 'recover_customer_password', class: 'form-account' -%}
        {{ form.errors | default_errors }}

        <div id="recover_email" class="form-control">
          <label for="email">{{- 'customer.recover_password.email' | t -}}</label>
          <input type="email" value="" size="30" name="email" id="recover-email"/>
        </div>
        <div class="action_bottom">
          <input class="btn btn-2" type="submit" value="Submit"/>
          <span class="note">{{ 'customer.general.or' | t }}</span>
          <a href="#" onclick="hideRecoverPasswordForm();return false;" class="btn btn-1">{{- 'customer.recover_password.cancel' | t -}}</a>
        </div>
      {%- endform -%}
    </div>


      Guest Login form for shops with optional customer accounts. This form is displayed only when users click on the checkout link
      on the cart page.

    {%- if shop.checkout.guest_login -%}
      <div id="guest">
        <div class="page-heading">
          <h3 class="title">{{- 'customer.login.guest_login' | t -}}</h3>
        </div>
        {%- form 'guest_login' -%}
          <div class="form-control">
            <input class="btn" type="submit" value="{{- 'customer.login.guest_continue' | t -}}"/>
          </div>
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div> {% endcomment %}

{% comment %} {% unless settings.breadcrumb_styles == 'none' %}{% include 'breadcrumb' %}{% endunless %} {% endcomment %}

<div class="container">
  <div class="page-login">

    <div class="row">

      <div class="col-12 col-lg-6">
        <div class="form-wrapper">

          <div id="customer-login" class="content">
            <h2 class="heading">{{ 'customer.login.title' | t }}</h2>
            <p>{{ 'customer.login.welcome' | t }}</p>

            {% form 'customer_login' %}

              {% if form.errors %}
                <div class="alert alert-error">
                  {{ form.errors | default_errors }}
                </div>
              {% endif %}

              <div class="control-wrapper">
                <label for="customer_email">{{ 'customer.login.email' | t }}<span class="req">*</span></label>
                <input type="email" required name="customer[email]" id="customer_email" />
              </div>

              {% if form.password_needed %}
                <div class="control-wrapper">
                  <label for="customer_password">{{ 'customer.login.password' | t }}<span class="req">*</span></label>
                  <input type="password" required name="customer[password]" id="customer_password" class="password" />
                </div>
              {% endif %}
              
              <div class="control-wrapper last">
                <div class="action">
                  <a class="return-store" href="{{ shop.url }}">{{ 'customer.login.cancel' | t }}</a>
                  <a class="forgot-pass" href="javascript:;" onclick="showRecoverPasswordForm()">{{ 'customer.login.forgot_password' | t }}</a>
                </div>
                <button class="btn btn-1" type="submit">{{ 'customer.login.sign_in' | t }}</button>
              </div>

            {% endform %}

          </div>

          <div id="recover-password" style="display: none;">

            <h2 class="heading">{{ 'customer.recover_password.title' | t }}</h2>
            <p class="note">{{ 'customer.recover_password.subtext' | t }}</p>

            {% form 'recover_customer_password' %}

            {% if form.posted_successfully? %}
            {% assign reset_success = true %}
            {% endif %}

            {% if form.errors %}
              <div class="alert alert-danger">
                <button type="button" class="close" title="{{'customer.general.close' | t }}" data-dismiss="alert">Ã—</button>
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="control-wrapper">
              <label for="email">{{ 'customer.recover_password.email' | t }}<span class="req">*</span></label>
              <input type="email" value="" name="email" id="recover-email" />
            </div>

            <div class="control-wrapper">
              <button class="btn btn-1" type="submit">{{ 'customer.recover_password.submit' | t }}</button>
              <a class="cancel btn btn-2" href="javascript:;" onclick="hideRecoverPasswordForm();">{{ 'customer.recover_password.cancel' | t }}</a>
            </div>

            {% endform %}
          </div>
        </div>

      </div>
      
      <div class="col-12 col-lg-6 login-or">
        <div class="form-wrapper">

          <h2 class="heading">{{'customer.register.title' | t }}</h2>
          <p>{{'customer.register.caption' | t: shop_name: shop.name }}</p>

          {% form 'create_customer' %}

            {% if form.errors %}
            <div class="alert alert-danger">
              {{ form.errors | default_errors }}
            </div>
            {% endif %}

            <div id="register-form">
              
              <div class="control-wrapper">
                <label for="first-name">{{ 'customer.register.first_name' | t }}</label>
                <input type="text" name="customer[first_name]" id="first-name" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus />
              </div>

              <div class="control-wrapper">
                <label for="last-name">{{ 'customer.register.last_name' | t }}</label>
                <input type="text" name="customer[last_name]" id="last-name" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words" autofocus />
              </div>
              
              <div class="control-wrapper{% if form.errors contains 'email' %} has-error{% endif %}">
                <label for="email">{{'customer.register.email' | t }}<span class="req">*</span></label>
                <input type="email" value="{{ form.email }}" name="customer[email]" id="email" {% if form.errors contains 'email' %} class="error"{% endif %} />
              </div>
              
              <div class="control-wrapper{% if form.errors contains 'password' %} has-error{% endif %}">
                <label for="password">{{'customer.register.password' | t }}<span class="req">*</span></label>
                <input type="password" value="" name="customer[password]" id="password" class="password{% if form.errors contains 'password' %} error{% endif %}" />
              </div>
              
              <div class="control-wrapper last">
                <button class="btn btn-1" type="submit">{{'customer.register.submit' | t }}</button>
              </div>
              
            </div>
          {% endform %}
          
          <h5 class="semi-bold">{{ 'customer.register.benefit_title' | t}}</h5>
          <ul class="list-unstyled list-benefits">
            {%- capture check_svg -%}{%- render 'svg' type: 'check' -%}{%- endcapture -%}
            <li>{{check_svg}} {{ 'customer.register.benefit_1' | t}}</li>
            <li>{{check_svg}} {{ 'customer.register.benefit_2' | t}}</li>
            <li>{{check_svg}} {{ 'customer.register.benefit_3' | t}}</li>
          </ul>

        </div>
      </div>
      
    </div>

  </div>
</div>

